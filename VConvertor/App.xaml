<Application x:Class="VConvertor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VConvertor"
             xmlns:localization="clr-namespace:VConvertor.Localization"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="/Resources/Styles/StyleDark.xaml"/>
                <ResourceDictionary  Source="/Resources/Styles/StyleDefault.xaml"/>
                <ResourceDictionary>
                    <localization:LocalisationHelper x:Key="Localisation"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
